{
  "name": "typescript-express-boilerplate",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc && npm run copy:json",
    "copy:json" : "rsync -am --include='*/' --include='*.json' --exclude='*' src/ dist/",
    "start": "node ./bin/www",
    "start-dev": "DEBUG=typescript-express-boilerplate:* node-dev ./bin/www"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.0",
    "node-dev": "^4.0.0",
    "prettier": "2.0.4",
    "typescript": "^3.8.3"
  }
}
