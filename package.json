{
  "name": "typescript-express-boilerplate",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc && npm run copy:json",
    "copy:json": "rsync -am --include='*/' --include='*.json' --exclude='*' src/ dist/",
    "start": "node ./bin/www",
    "start-dev": "DEBUG=$npm_package_name:* ts-node-dev --transpile-only --inspect -- ./src",
    "debug": "DEBUG=$npm_package_name:* ts-node-dev --transpile-only --inspect-brk -- ./src"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "hbs": "^4.1.1",
    "http-errors": "^1.7.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/hbs": "^4.0.1",
    "@types/http-errors": "^1.6.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.0",
    "prettier": "2.0.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
