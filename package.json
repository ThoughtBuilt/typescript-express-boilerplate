{
  "name": "typescript-express-boilerplate",
  "version": "0.0.0",
  "private": true,
  "config": {
    "tsnd": "--transpile-only"
  },
  "scripts": {
    "build": "npm run tsc && npm run copy:json",
    "tsc": "tsc -b tsconfig.dist.json",
    "copy:json": "(cd src && find . -name '*.json' | cpio -pdm  ../dist)",
    "start": "node dist",
    "tsnd": "ts-node-dev ${TSND_OPTS:-$npm_package_config_tsnd} -- src",
    "inspect": "TSND_OPTS=\"$npm_package_config_tsnd --inspect\" npm run tsnd",
    "inspect-brk": "TSND_OPTS=\"$npm_package_config_tsnd --inspect-brk\" npm run tsnd",
    "debug": "DEBUG=$npm_package_name:* npm run tsnd",
    "test": "jest"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "hbs": "^4.1.1",
    "http-errors": "^1.7.3",
    "mongodb": "^3.5.7",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/hbs": "^4.0.1",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.2.1",
    "@types/mongodb": "^3.5.14",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.5",
    "@types/supertest": "^2.0.9",
    "jest": "^25.5.4",
    "prettier": "2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
